@model Product
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h1>Ürün Detay</h1>
<hr />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">


<div style="margin-top: 70px;margin-bottom: 80px;margin-left:30px; " class="row">
    <div class="col-md-3">
   
        <img src="~/img/@Model.ProductImageUrl1" class="img-fluid">
    </div>
    <div class="col-md-9 mt-1">
        <h3 class="class=" text-primary" style="color:cornflowerblue">
            <p style="display:inline;font-size:18px;color:black">Ürün Adı:</p> @Model.ProductName</h3> <hr>
        <h4 style="color:cornflowerblue"><p style="display:inline;font-size:20px;color:black">Ürün Rayonu:</p> @Model.Category.CategoryName Rayonu</h4>
            <div class="mb-5">
            <h4 style="color:cornflowerblue">  <p style="display:inline;font-size:20px;color:black">Ürün Bedeni:</p> @Model.ProductSize</h4>
                <br />
            <h4 style="color:cornflowerblue"> <p style="display:inline;font-size:20px;color:black">Ürün Açıklaması:</p> @Model.ProductDespcription.Substring(1,151)....</h4>
                
            <h4 style="color:cornflowerblue"> <p style="display:inline;font-size:20px;color:black">Ürün Stok Adeti:</p> @Model.ProductStock</h4>
                <br /><br />
            <h4 style="color:darkblue" >
                <p style="display:inline;font-size:21px;color:black;">Ürün Fiyatı:</p>
                    @Model.ProductPrice <i class="fa fa-turkish-lira" style="font-size:20px;"></i>
                </h4>
                <br />
            <td><a href="/Product/ProductUpdate/@Model.Id" class="btn btn-warning btn-lg mr-3">Update</a></td>
            <td><a href="/Product/ProductDelete/@Model.Id" class="btn btn-danger btn-lg">Delete</a></td>
                </h6>
            </div>
    </div>
