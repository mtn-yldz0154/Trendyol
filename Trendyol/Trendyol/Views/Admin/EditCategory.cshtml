@model Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Edit</h2>
<hr />
<br />

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Admin" asp-action="EditCategory" method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row ml-2">
                        <label style="margin-left:20px;" asp-for="CategoryName" class="col-sm-1 ml-3 col-form-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="CategoryName">
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        <br /> <br />
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 offset-sm-1 mt-3 ml-3">
                            <button type="submit" class="btn btn-outline-primary">Kategori Kaydet</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />

                      